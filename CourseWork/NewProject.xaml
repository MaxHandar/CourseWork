<Window x:Class="CourseWork.NewProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork"
        mc:Ignorable="d"
        Title="CourseWork" Height="600" Width="600">
    <Grid Background="#9D9D9D">
        <Border MinWidth="400" Margin="15" Background="White" VerticalAlignment="Center" Padding="90" MaxWidth="500" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="DarkGray" ShadowDepth="0"></DropShadowEffect>
            </Border.Effect>
            <StackPanel>
                <Grid Margin="0 0 0 30">
                    <Button HorizontalAlignment="Center" Content="Новое помещение" Click ="Button_Click_NewRoom" FontSize="20"></Button>
                </Grid>
                <Grid Margin="0 0 0 0">
                    <Button HorizontalAlignment="Center" Content="Завершенные помещения" Click ="Button_Click_EndedRooms" FontSize="20" Cursor="Hand"></Button>
                </Grid>

            </StackPanel>
        </Border>
    </Grid>
</Window>